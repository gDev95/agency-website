{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "rootDir": "./",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "components/**/*",
    "pages/**/*",
    "lib/*",
    "shared/**/*",
    "shared/helpers/**/*rs/**/*"
, "helpers"  ],
  "exclude": [
    "node_modules"
  ]
}
